/* Diagnostic CSS. */
body[bottommargin], body[leftmargin], 
body[rightmargin], body[topmargin],
*[background], *[bgcolor] {
	color: #000;
	font-weight: bold;
	background-color: #fc6;
	border: 2px solid #c60; }
font, center, s, u, b, i {
	color: #000;
	font-weight: bold;
	background-color: #f99;
	border: 2px solid #c00; }

