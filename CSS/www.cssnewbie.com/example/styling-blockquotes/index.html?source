#dropcap {
	margin: 1em 2em;
	border-left: 1px dashed #999;
	padding-left: 1em; }
#dropcap p:first-letter {
	float: left;
	margin: .2em .3em .1em 0;
	font-family: "Monotype Corsiva", "Apple Chancery", fantasy;
	font-size: 220%;
	font-weight: bold; }
#dropcap p:first-line {
	font-variant: small-caps; }
#text {
	color: #66a;
	font-weight: bold;
	font-style: italic;
	margin: 1em 3em; }
